    "version": "0.2.0",
    "configurations": [     
        {
            "name": "Docker py4web: Remote Attach via 5678",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/apps/_default"
                }
            ],
            "justMyCode": false,
        },
    ]
}